<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrontPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/main_color"
        android:background="@color/white"
        android:text="City"
        android:id="@+id/txtCityName"
        android:gravity="center_horizontal"
        android:textSize="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="Current temp"
        android:id="@+id/txtCurrentTemp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/txtCityName"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="Min temp"
        android:id="@+id/txtMinTemp"
        android:layout_alignTop="@+id/txtCurrentTemp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="Max temp"
        android:id="@+id/txtMaxTemp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/txtCurrentTemp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="Wind speed"
        android:id="@+id/txtWindSpeed"
        android:layout_marginTop="148dp"
        android:layout_below="@+id/txtCurrentTemp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="Current time"
        android:textSize="35dp"
        android:id="@+id/txtCurrentTime"
        android:layout_marginBottom="82dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="Sunrise"
        android:id="@+id/txtSunrise"
        android:layout_alignBottom="@+id/txtCurrentTime"
        android:layout_alignRight="@+id/txtMinTemp"
        android:layout_alignEnd="@+id/txtMinTemp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:text="Sunset"
        android:id="@+id/txtSunset"
        android:layout_alignBottom="@+id/txtCurrentTime"
        android:layout_alignLeft="@+id/txtMaxTemp"
        android:layout_alignStart="@+id/txtMaxTemp"
        android:gravity="center_horizontal"/>

    <com.fakecompany.weatherapp.DrawSpace
        android:id="@+id/drwspcSunArc"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
</RelativeLayout>